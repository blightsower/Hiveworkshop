library MapConfiguration
    globals
        private constant player p = Player(22)
    endglobals

    struct MapConfiguration

        static method onInit takes nothing returns nothing
            local integer i = 0

            call BlzShowTerrain(true)
            call FogMaskEnableOff()

            loop
                exitwhen i > Globals.playerCount
                call SetPlayerAllianceStateBJ(p, Player(i), bj_ALLIANCE_ALLIED_VISION)
                call SetPlayerAllianceStateBJ(Player(i), p, bj_ALLIANCE_ALLIED_VISION)
                
                set i = i + 1
            endloop
        endmethod
    endstruct
endlibrary
